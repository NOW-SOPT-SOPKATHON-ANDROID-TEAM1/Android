<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/image_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="14dp"
        android:background="#FFFBF8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/remind_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="15dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="@id/image_background"
            app:layout_constraintStart_toStartOf="@id/image_background"
            app:layout_constraintTop_toTopOf="@id/image_background"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Large" />

        <TextView
            android:id="@+id/tv_remind_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:lineHeight="16dp"
            android:textAppearance="@font/pretendard_semibold"
            android:textColor="#000000"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@+id/remind_image"
            app:layout_constraintTop_toBottomOf="@+id/remind_image"
            tools:text="2024.05.19" />

        <TextView
            android:id="@+id/remind_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/pretendard_bold"
            android:lineHeight="20dp"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/image_background"
            app:layout_constraintStart_toStartOf="@+id/image_background"
            app:layout_constraintTop_toBottomOf="@id/tv_remind_date"
            tools:text="1조가 1등 솝커톤 찢었다" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
