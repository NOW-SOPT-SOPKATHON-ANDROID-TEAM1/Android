<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image9"
    tools:context=".presentation.ui.home.HomeActivity">


    <TextView
        android:id="@+id/tv_home_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="00아,"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_today_feeling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/pretendard_bold"
        android:text=" 지금 기분이 어때?"
        android:textSize="24dp"
        app:layout_constraintStart_toEndOf="@+id/tv_home_name"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/btn_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="220dp"
        android:elevation="5dp"
        android:background="@drawable/btn_home_bad"
        app:layout_constraintBottom_toBottomOf="@id/tv_btn"
        app:layout_constraintEnd_toStartOf="@id/btn_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_today_feeling"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/btn_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="18dp"
        android:elevation="5dp"
        android:layout_marginBottom="220dp"
        android:background="@drawable/btn_home_good"
        app:layout_constraintBottom_toBottomOf="@id/tv_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_today_feeling"
        app:layout_goneMarginEnd="22dp"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium" />

    <ImageView
        android:id="@+id/tv_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="5dp"
        android:layout_marginBottom="40dp"
        android:text="행복한 순간들 모아보기"
        android:textColor="#717171"
        android:layout_marginEnd="125dp"
        android:background="@drawable/btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="22dp"
        app:layout_constraintTop_toBottomOf="@id/btn_1"
        android:layout_marginTop="175dp"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>