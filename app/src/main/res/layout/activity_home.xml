<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.home.HomeActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_marginHorizontal="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_home_name"
        android:layout_marginBottom="650dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_android_black_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="106dp"
                android:layout_marginEnd="106dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_home_name"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="89dp"
        android:text="000님"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_logo"/>


    <TextView
        android:id="@+id/tv_today_feeling"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:text="오늘의 기분은 어떠세요?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_name" />

    <Button
        android:id="@+id/btn_1"
        android:layout_height="0dp"
        android:layout_marginBottom="215dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="64dp"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_today_feeling" />


    <Button
        android:id="@+id/btn_2"
        android:layout_height="0dp"
        android:layout_marginBottom="215dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="64dp"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_today_feeling"
        app:layout_constraintVertical_bias="0.0"
        app:layout_goneMarginEnd="22dp" />



</androidx.constraintlayout.widget.ConstraintLayout>