<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_onboarding_question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/pretendard_medium"
        android:gravity="center"
        android:lineHeight="24dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="친구들과의 즐거웠던 추억을 기록해주세요" />

    <ImageView
        android:id="@+id/iv_onboarding_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="46dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_border_radius_16"
        android:backgroundTint="#F7F0EA"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_edit_text_background"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_onboarding_question" />

    <EditText
        android:id="@+id/et_onboarding"
        android:layout_width="0dp"
        android:layout_height="104dp"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="24dp"
        android:background="#F7F0E4"
        android:gravity="top|left"
        android:hint="좋았던 순간 기록하기.."
        android:lineHeight="20dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:textColor="#A59383"
        android:textColorHint="#AEAEAE"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_onboarding_image" />

</androidx.constraintlayout.widget.ConstraintLayout>